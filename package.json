{
  "name": "ohmygit",
  "displayName": "Oh My Git",
  "description": "在Git记录中内联显示TXT文件内容，支持翻页阅读",
  "version": "1.2.4",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "SCM Providers",
    "Other"
  ],
  "activationEvents": [
    "onCommand:ohmygit.showGitHistory",
    "onView:ohmygit.gitHistoryView"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ohmygit.showGitHistory",
        "title": "显示Git历史记录",
        "category": "Oh My Git"
      },
      {
        "command": "ohmygit.nextPage",
        "title": "下一页",
        "category": "Oh My Git"
      },
      {
        "command": "ohmygit.previousPage",
        "title": "上一页",
        "category": "Oh My Git"
      },
      {
        "command": "ohmygit.configureTxtPath",
        "title": "配置TXT文件路径",
        "category": "Oh My Git",
        "icon": "$(file)"
      },
      {
        "command": "ohmygit.showConfig",
        "title": "显示配置信息",
        "category": "Oh My Git"
      },
      {
        "command": "ohmygit.refreshConfig",
        "title": "刷新配置",
        "category": "Oh My Git",
        "icon": "$(refresh)"
      },
      {
        "command": "ohmygit.firstPage",
        "title": "第一页",
        "category": "Oh My Git",
        "icon": "$(arrow-left)"
      },
      {
        "command": "ohmygit.previousPageBtn",
        "title": "上一页",
        "category": "Oh My Git",
        "icon": "$(chevron-left)"
      },
      {
        "command": "ohmygit.nextPageBtn",
        "title": "下一页",
        "category": "Oh My Git",
        "icon": "$(chevron-right)"
      },
      {
        "command": "ohmygit.lastPage",
        "title": "最后一页",
        "category": "Oh My Git",
        "icon": "$(arrow-right)"
      },
      {
        "command": "ohmygit.goToPage",
        "title": "跳转到页面",
        "category": "Oh My Git",
        "icon": "$(go-to-file)"
      },
      {
        "command": "ohmygit.toggleHiddenMode",
        "title": "隐藏/显示TXT内容",
        "category": "Oh My Git",
        "icon": "$(eye)"
      }
      ,
      {
        "command": "ohmygit.searchFirst",
        "title": "搜索",
        "category": "Oh My Git",
        "icon": "$(search)"
      },
      {
        "command": "ohmygit.searchPrevious",
        "title": "搜索：上一处",
        "category": "Oh My Git",
        "icon": "$(arrow-up)"
      },
      {
        "command": "ohmygit.searchNext",
        "title": "搜索：下一处",
        "category": "Oh My Git",
        "icon": "$(arrow-down)"
      }
    ],
    "keybindings": [
      {
        "command": "ohmygit.nextPage",
        "key": "right",
        "when": "ohmygit.gitHistoryView"
      },
      {
        "command": "ohmygit.previousPage",
        "key": "left",
        "when": "ohmygit.gitHistoryView"
      },
      {
        "command": "ohmygit.nextPage",
        "key": "down",
        "when": "ohmygit.gitHistoryView"
      },
      {
        "command": "ohmygit.previousPage",
        "key": "up",
        "when": "ohmygit.gitHistoryView"
      },
      {
        "command": "ohmygit.toggleHiddenMode",
        "key": "ctrl+h",
        "when": "ohmygit.gitHistoryView"
      },
      {
        "command": "ohmygit.toggleHiddenMode",
        "key": "cmd+h",
        "when": "ohmygit.gitHistoryView"
      },
      {
        "command": "ohmygit.searchFirst",
        "key": "alt+f",
        "when": "ohmygit.gitHistoryView"
      },
      {
        "command": "ohmygit.searchPrevious",
        "key": "shift+f3",
        "when": "ohmygit.gitHistoryView"
      },
      {
        "command": "ohmygit.searchNext",
        "key": "f3",
        "when": "ohmygit.gitHistoryView"
      }
    ],
    "views": {
      "scm": [
        {
          "id": "ohmygit.gitHistoryView",
          "name": "Git历史记录"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "ohmygit.configureTxtPath",
          "when": "view == ohmygit.gitHistoryView",
          "group": "navigation@0"
        },
        {
          "command": "ohmygit.firstPage",
          "when": "view == ohmygit.gitHistoryView",
          "group": "navigation@1"
        },
        {
          "command": "ohmygit.previousPageBtn",
          "when": "view == ohmygit.gitHistoryView",
          "group": "navigation@2"
        },
        {
          "command": "ohmygit.nextPageBtn",
          "when": "view == ohmygit.gitHistoryView",
          "group": "navigation@3"
        },
        {
          "command": "ohmygit.lastPage",
          "when": "view == ohmygit.gitHistoryView",
          "group": "navigation@4"
        },
        {
          "command": "ohmygit.refreshConfig",
          "when": "view == ohmygit.gitHistoryView",
          "group": "navigation@5"
        },
        {
          "command": "ohmygit.goToPage",
          "when": "view == ohmygit.gitHistoryView",
          "group": "navigation@6"
        },
        {
          "command": "ohmygit.toggleHiddenMode",
          "when": "view == ohmygit.gitHistoryView",
          "group": "navigation@7"
        },
        {
          "command": "ohmygit.searchFirst",
          "when": "view == ohmygit.gitHistoryView",
          "group": "navigation@8"
        },
        {
          "command": "ohmygit.searchPrevious",
          "when": "view == ohmygit.gitHistoryView",
          "group": "navigation@9"
        },
        {
          "command": "ohmygit.searchNext",
          "when": "view == ohmygit.gitHistoryView",
          "group": "navigation@10"
        }
      ]
    },
    "configuration": {
      "title": "Oh My Git",
      "properties": {
        "ohmygit.txtFilePath": {
          "type": "string",
          "default": "",
          "description": "要显示的TXT文件路径"
        },
        "ohmygit.pageSize": {
          "type": "number",
          "default": 30,
          "description": "每页显示的字符数"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package --out dist/",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "eslint": "^8.26.0",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "simple-git": "^3.16.0"
  },
  "keywords": [
    "git",
    "scm",
    "txt",
    "reader",
    "history"
  ],
  "author": "Daniel and Cursor",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": ""
  },
  "publisher": "leinad"
}
